<!DOCTYPE html>
<html>
  <head>
    <title>Fms</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag Ckeditor.cdn_url %>
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  </head>

  <body>

    <nav>
      <div class="nav-wrapper" style="background-color: teal;">
          <a href="<%= root_path %>" class="brand-logo">FEEDBACK FORM</a>
          <a href="#" class="button-collapse" data-activates="mobile-side"><i class="material-icons">menu</i></a>
          <ul id="nav-mobile" class="right hide-on-med-and-down">
            <% if user_signed_in? %>
              <li>Signed in as : <u><%= current_user.email %></u></li>
              <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
            <% else %>
              <li><%= link_to "Sign In", new_user_session_path %></li>
            <% end %>
          </ul>
      </div>
    </nav>

    <div>
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
    </div>

    <%= yield %>

    <%# render partial: "layouts/footer" %>


  </body>
</html>
