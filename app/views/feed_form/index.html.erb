                 <label for="test4<%= i %>">4</label> <br>

                 <input name="group1<%= i %>" type="radio" id="test5<%= i %>" onclick="takeData(<%= 5 %>, <%= i%>)" />
                 <label for="test5<%= i %>">5</label>

              </div>
            </div>
          </div>
          <% i += 1 %>
        <% end %>

        <!-- <button type="button" name="button" onclick="showSum()">Submit</button> -->
        <a href="/feed_form/thankyou" class="btn waves-effect waves-light" onclick="showSum()">
          <i class="material-icons right">send</i>Submit
        </a>

    </div>
    <div class="col s12 m3"></div>
  </div>
</div>

