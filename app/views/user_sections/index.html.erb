<p id="notice"><%= notice %></p>

<h1>User Sections</h1>

<table>
  <thead>
    <tr>
      <th>Student Roll</th>
      <th>Section</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_sections.each do |user_section| %>
      <tr>
        <td><%= user_section.user.roll %></td>
        <td><%= user_section.section.name %></td>
        <td><%= link_to 'Show', user_section %></td>
        <td><%= link_to 'Edit', edit_user_section_path(user_section) %></td>
        <td><%= link_to 'Destroy', user_section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User Section', new_user_section_path %>
