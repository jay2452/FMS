<p id="notice"><%= notice %></p>

<h1>Faculty Subjects</h1>

<table>
  <thead>
    <tr>
      <th>Subject</th>
      <th>Faculty</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @faculty_subjects.each do |faculty_subject| %>
      <tr>
        <td><%= faculty_subject.subject.name %></td>
        <td><%= faculty_subject.faculty.name %></td>
        <td><%= link_to 'Show', faculty_subject %></td>
        <td><%= link_to 'Edit', edit_faculty_subject_path(faculty_subject) %></td>
        <td><%= link_to 'Destroy', faculty_subject, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

